# ===========================================================================
#
# Makefile for lib/scan subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = lib/path/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
LIB = ../libowfat.a
ARCHIVE = path.a
MODULES = path_basename path_canonical path_canonicalize path_canonical_sa path_collapse path_fnmatch path_getcwd path_gethome path_getsep path_is_absolute_b path_is_absolute path_len_s path_readlink path_realpath path_right

SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile .libdep $(ARCHIVE)
install:

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I$(top_builddir)
#INCLUDES += -I$(top_builddir)/lib

# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
