# $Id: Makefile.in,v 1.5 2005/04/15 18:57:53 smoli Exp $
# ===========================================================================
#
# Makefile for src/term subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = @thisdir@

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk
          
# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = term.a
MODULES = term_ansi \
          term_attr \
          term_backspace \
          term_delete \
          term_end \
          term_escape \
          term_getline \
          term_home \
          term_init \
          term_insertc \
          term_left \
          term_newline \
          term_overwritec \
          term_read \
          term_restore \
          term_right \
          term_setline \
          term_winsize
          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -isystem $(top_srcdir)/lib
INCLUDES += -isystem $(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
INCLUDES += -I$(top_builddir)/src
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
